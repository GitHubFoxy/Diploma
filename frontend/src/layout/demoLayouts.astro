---
const { title, data } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>
  <body>
    <header class="bg-slate-500 text-white">
      <nav class="flex justify-center mx-auto max-w-xl p-2">
        <a
          href="/"
          class="p-2 transition-colors duration-100 rounded hover:bg-slate-600"
          >{data}</a
        >
      </nav>
    </header>
    <slot />
  </body>
</html>
